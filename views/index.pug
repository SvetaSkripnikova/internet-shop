extends layout.pug

block title

    <title> MILLION FLOWERS | Main page </title>
    
            
            
            
block content
    div(class="main_img")
        img(src="https://onemillionflowers.ru/wp-content/uploads/2018/02/logo.png")
    br
    br
    div(class="dropdown")
        button(class="dropbtn") Выбор категории
        div(class="dropdown-content")
            a(data-filter="0") Все категории
            a(data-filter="1") Цветы в коробке
            a(data-filter="2") Бизнес-букеты
            a(data-filter="3") Авторские букеты
    br
    br
    div(id="elemforid" name="5")
    div(id='products' class='products')
        each item in products
            div(class='product_block' data-cat=`${item.category.id}`) 
                div(class='product_img')
                    img(src=`${item.img}`)   
                div(class='product_name') #{item.title} 
                div(class='product_categoty') #{item.category.name}  
                div(class='product_price') #{item.price} р.
                -var srcc=`http://localhost:3000/product?id=${item.id}&title=${item.title}&discription=${item.discription}&price=${item.price}&img=${item.img}&category_name=${item.category.name}`
                    a(class="btn_next", type="button", value="Подробнее" href=`${srcc}`) Подробнее
    <script src="../public/script.js"></script>
                
                                        
                        
                                
                                    
                                    
                                

            
        
                    
                            
                                


                        
                            
            
                            
                                
                    